<div class="container">
  
  <div class="col-md-12 companyName"><%=   @stock.name %> </div>
  <div class="col-md-2 companySymbol"><%= @stock.symbol %> &nbsp;  <%= @stock.ask %> </div>
  <% if @get_quotes["quotes"]["quote"]["change"] > 0 %>
  <div class="col-md-10 sharePricePercentageChange" id="green"> <%= @get_quotes["quotes"]["quote"]["change"]%><i class="fa fa-arrow-up"></i>  &nbsp;  <%= @get_quotes["quotes"]["quote"]["change_percentage"]%>%
  </div>
  <% else %>
  <div class="col-md-10 sharePricePercentageChange" id="red"> <%= @get_quotes["quotes"]["quote"]["change"]%><i class="fa fa-arrow-down"></i>  &nbsp;  <%= @get_quotes["quotes"]["quote"]["change_percentage"]%>%
  </div>
  <%end%>

  <div>
    <!-- <div class="col-md-2">Previous close:<%=    @stock.previous_close %></div> -->
    <div class="col-md-12 eps">Eps estimate next quarter:  <%= @stock.eps_estimate_next_quarter%></div>


  </div>


